@model Dominio.Classes.Equipe

<nav>
    <span class="card-title">Excluir equipe</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Página Inicial", "Index", "Home") >
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
<p>
    <h5>Você tem certeza que deseja excluir essa equipe?</h5>
</p>

@using (Html.BeginForm("Excluir", "Equipe"))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#editar-equipe">Excluir equipe</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>

        <div id="editar-equipe" class="col s12">
            <div class="row col s12">
                <div class="row">
                    <div class="input-field col s2">
                        @Html.DisplayNameFor(model => model.codigo)
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s2">
                        @Html.DisplayFor(model => model.codigo)
                    </div>
                </div>
            </div>
            <div class="row col s12">

                <fieldset>
                    <legend>Detalhes da equipe</legend>
                    <div class="row">
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.numSus)
                        </div>

                        <div class="input-field col s4">
                            @Html.DisplayNameFor(model => model.funcao)
                        </div>

                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.codMicroArea)
                        </div>
                    </div>
                    <div class="row">

                        <div class="input-field col s2">
                            @Html.DisplayFor(model => model.numSus)
                        </div>

                        <div class="input-field col s4">
                            @Html.DisplayFor(model => model.funcao)
                        </div>

                        <div class="input-field col s2">
                            @Html.DisplayFor(model => model.codMicroArea)
                        </div>
                    </div>

                </fieldset>

            </div>
            <div class="row center">
                <input type="submit" value="Excluir" class="btn blue" />
            </div>
        </div>
    </div>
}


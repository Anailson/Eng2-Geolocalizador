@model Dominio.Classes.Equipe
<nav>
    <span class="card-title">Cadastrar equipe</span>
</nav>


<div>
    <br /><br />
    @Html.ActionLink("Home", "Index", "Home") >
    @Html.ActionLink("Voltar a Lista", "Index")
    <br /><br />
</div>

@using (Html.BeginForm("Cadastrar", "Equipe"))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#cadastro-equipe">Cadastrar equipe</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>

        <div id="cadastro-equipe" class="col s12">
            <form>
                <br /><br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="row">
                    <div class="input-field" col s12>
                        <fieldset>
                            <legend>Dados do membro da equipe</legend>
                            <div class="row">
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.numSus, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.numSus, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.numSus, "", new { @class = "text-danger" })
                                </div>
                                <div class="input-field col s4">
                                    @Html.LabelFor(model => model.funcao, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.funcao, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.funcao, "", new { @class = "text-danger" })
                                </div>
                                <div class="input-field col s2">
                                    @Html.LabelFor(model => model.codMicroArea, htmlAttributes: new { @class = "control-label col-md-2" })
                                    @Html.EditorFor(model => model.codMicroArea, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.codMicroArea, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </fieldset>
                    </div>
                </div>
                <div class="col-md-offset-2 col-md-10 center">
                    <input type="submit" value="Cadastrar" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>
}

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

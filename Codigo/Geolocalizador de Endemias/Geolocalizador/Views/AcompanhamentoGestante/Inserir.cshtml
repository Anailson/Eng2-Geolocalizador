@model Dominio.Classes.AcompanhamentoGestante
<nav>
    <span class="card-title">Cadastrar acompanhamento de gestante</span>
</nav>

@using (Html.BeginForm("Cadastrar", "AcompanhamentoGestante"))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <br /><br />
        @Html.ActionLink("Página Inicial", "Index", "Home") >
        @Html.ActionLink("Voltar a Lista", "Index")
    </div>

    <div class="row">
        <div class="col s12">

            <ul class="tabs">
                <li class="tab"><a href="#cadastro-acomp-gestante">Cadastrar acompanhamento de gestante</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>
        <br /><br />
        <form>
            <br /><br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="input-field col s2">
                        @Html.DisplayNameFor(model => model.Visita.dataVisita)
                        @Html.DisplayFor(model => model.Visita.dataVisita)
                    </div>
                    <div class="input-field col s1"></div>
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.numSus, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.numSus, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.numSus, "", new { @class = "text-danger" })
                    </div>
                    <div class="input-field col s1"></div>
                    <div class="input-field col s2">
                        @Html.LabelFor(model => model.codVisita, htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.EditorFor(model => model.codVisita, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.codVisita, "", new { @class = "text-danger" })
                    </div>

                </div>
            </div>

            <div id="cadastro-acomp-gestante" class="row">
                <div class="input-field col s12">
                    
                    <fieldset>
                        <legend>Informações da gestante</legend>
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.prenatalMensal, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.prenatalMensal, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.prenatalMensal, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.semanasGestacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.semanasGestacao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.semanasGestacao, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            
            <div class="row center">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>
}
    
<script src="~/Content/js/jquery-2.1.4.min.js"></script>
<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.validate.unobtrusive.js"></script>
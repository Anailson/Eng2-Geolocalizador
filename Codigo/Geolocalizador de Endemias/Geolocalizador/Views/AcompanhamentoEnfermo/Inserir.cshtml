                    <fieldset>
                        <legend>Informações da criança</legend>
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.idEnfermidade, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.idEnfermidade, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.idEnfermidade, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.acompanhamentoMedico, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.acompanhamentoMedico, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.acompanhamentoMedico, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.acompanhamentoPsico, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.acompanhamentoPsico, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.acompanhamentoPsico, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.medicacao, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.medicacao, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.medicacao, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.procedimentoCirurgico, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.procedimentoCirurgico, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.procedimentoCirurgico, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>

            <div class="row center">
                <input type="submit" value="Cadastrar" class="btn btn-default" />
            </div>
        </form>
    </div>




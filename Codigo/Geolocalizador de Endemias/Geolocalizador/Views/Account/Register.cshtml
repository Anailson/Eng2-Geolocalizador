@model Geolocalizador.Models.Register

<nav>
    <span class="card-title">Cadastrar usuário</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Página Inicial", "Index", "Home")
</div>
@using (Html.BeginForm("Register", "Account")) 
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#alterar-senha">Cadastrar usuário</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>

        <div class="row">
            <form>
                <div id="alterar-senha" class="col s12">
                    <br /><br />
                    <fieldset>
                        <legend>Dados do usuário</legend>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.UserName)
                                @Html.ValidationMessageFor(model => model.UserName)
                            </div>
                            <div class="input-field col s1"></div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.Password, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Password)
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                            <div class="input-field col s1"></div>

                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.ConfirmPassword)
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                            <div class="input-field col s1"></div>
                        </div>
                        <div class="row">
                            <div class="input-field col s7">
                                @Html.LabelFor(model => model.FullName, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.FullName)
                                @Html.ValidationMessageFor(model => model.FullName)
                            </div>

                            <div class="input-field col s5">
                                @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Email)
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>

                        </div>
                        <div class="row">
                            <div class="input-field col s10">
                                @Html.LabelFor(model => model.Bio, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Bio)
                                @Html.ValidationMessageFor(model => model.Bio)
                            </div>

                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.BirthDate, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.BirthDate)
                                @Html.ValidationMessageFor(model => model.BirthDate)
                            </div>
                        </div>
                    </fieldset>
                </div>
            </form>
        </div>
        <div class="row center">
            <input type="submit" value="Cadastrar" class="btn blue" />
        </div>
    </div>
}
<script src="~/Content/js/jquery-2.1.4.min.js"></script>
<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.validate.unobtrusive.js"></script>

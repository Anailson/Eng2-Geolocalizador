@model Geolocalizador.Models.ChangePassword

<nav>
    <span class="card-title">Alterar senha</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Página Inicial", "Index", "Home")
</div>

@using (Html.BeginForm("ChangePassword", "Account"))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#alterar-senha">Alterar senha</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>
        <div class="row">
            <form>
                <div id="alterar-senha" class="col s12">
                    <br /><br />
                    <fieldset>
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.OldPassword, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.OldPassword)
                                @Html.ValidationMessageFor(model => model.OldPassword)
                            </div>
                            <div class="input-field col s1"></div>

                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.NewPassword, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.NewPassword)
                                @Html.ValidationMessageFor(model => model.NewPassword)
                            </div>
                            <div class="input-field col s1"></div>

                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.ConfirmPassword, new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.ConfirmPassword)
                                @Html.ValidationMessageFor(model => model.ConfirmPassword)
                            </div>
                            <div class="input-field col s1"></div>
                        </div>
                    </fieldset>
                </div>
            </form>
        </div>

        <div class="row center">
            <input type="submit" value="Salvar" class="btn blue" />
        </div>
    </div>
}
<script src="~/Content/js/jquery-2.1.4.min.js"></script>
<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.validate.unobtrusive.js"></script>

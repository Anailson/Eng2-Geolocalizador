@model Dominio.Classes.Visita
<nav>
    <span class="card-title">Excluir visita domiciliar</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Home", "Index", "Home") >
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
<p>
    <br /><h5>Você tem certeza que deseja excluir essa visita domiciliar?</h5><br />
</p>

@using (Html.BeginForm("Excluir","Visita")) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.codigo)
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#detalhes-visita">Excluir visita domiciliar</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>
        <div id="detalhes-visita" class="col s12">
            <div class="row">
                <br /><br />
                <fieldset>
                    <legend>Horário da visita</legend>
                    <div class="row">
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.codigo)<br /><br />
                            @Html.DisplayFor(model => model.codigo)
                        </div>
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.codDomicilio)<br /><br />
                            @Html.DisplayFor(model => model.codDomicilio)
                        </div>
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.dataVisita)<br /><br />
                            @Html.DisplayFor(model => model.dataVisita)
                        </div>
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.dataProxVisita)<br /><br />
                            @Html.DisplayFor(model => model.dataProxVisita)
                        </div>
                        <div class="input-field col s2">
                            @Html.DisplayNameFor(model => model.melhorHorario)<br /><br />
                            @Html.DisplayFor(model => model.melhorHorario)
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="row">
                <fieldset>
                    <legend>Observações</legend>
                    <div class="row">
                        <div class="input-field col s8">
                            @Html.DisplayNameFor(model => model.resumo)<br /><br />
                            @Html.DisplayNameFor(model => model.detalhes)
                        </div>
                        <div class="input-field col s8">
                            @Html.DisplayFor(model => model.resumo)<br /><br />
                            @Html.DisplayFor(model => model.detalhes)
                        </div>
                    </div>
                </fieldset>
            </div>
        </div>
        <div class="row center">
            <input type="submit" value="Remover" class="btn blue" />
        </div>
    </div>
}


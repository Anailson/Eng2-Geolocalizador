@model IEnumerable<Dominio.Classes.Individuo>
<nav>
    <span class="card-title">Lista de indivíduos cadastrados</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Página Inicial", "Index", "Home")
</div>
<div class="row">
    <form>
        <p>
            <div class="row">
                <div class="input-field col s3">
                    <input name="pesquisa-individuo" class="with-gap" type="radio" id="sus" checked />
                    <label for="sus">N° do SUS</label>
                    <input name="pesquisa-individuo" class="with-gap" type="radio" id="nome" />
                    <label for="nome">Nome</label>
                </div>
                <div class="input-field col s3">
                    <i class="material-icons prefix">search</i>
                    <input id="pesquisa" type="text" placeholder="Pesquisar" />
                </div>
                <div class="input-field col s3">
                    @Html.ActionLink("Novo", "Inserir", null, new {@class="btn blue"})
                </div>
            </div>
        </p>
    </form>
</div>

<div class="col s12">
    <table class="striped">
            <thead>
                <tr>
                    <th data-field="sus" >
                            @Html.DisplayNameFor(model => model.susResponsavel)
                    </th>
                    <th data-field="nome">
                            @Html.DisplayNameFor(model => model.nome)
                    </th>
                    <th></th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tbody>
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.susResponsavel)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nome)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Editar", new { id = item.id }, new { @class = "btn blue" })
                            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.id }, new { @class = "btn blue" })
                            @Html.ActionLink("Remover", "Remover", new { id = item.id }, new { @class = "btn blue" })
                        </td>
                    </tr>
                </tbody>
            }
    </table>
</div>
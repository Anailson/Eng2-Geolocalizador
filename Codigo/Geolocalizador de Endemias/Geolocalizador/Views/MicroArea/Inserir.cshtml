@model Dominio.Classes.MicroArea
<nav>
    <span class="card-title">Cadastrar micro área</span>
</nav>

<div class="row">
    <br /><br />
    @Html.ActionLink("Página Inicial", "Index", "Home") >
    @Html.ActionLink("Voltar a Lista", "Index")
</div>
@using (Html.BeginForm("Cadastrar", "MicroArea")) 
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab"><a href="#cadastro-micro">Cadastrar micro área</a></li>
                <li class="tab disabled"></li>
            </ul>
        </div>
        <form>
            <div class="row">
                <div id="cadastro-micro" class="col s12">
                    <br /><br />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <fieldset>
                        <legend>Micro área</legend>
                        <div class="row">
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.codigo, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.codigo, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.codigo, "", new { @class = "text-danger" })
                            </div>
                            <div class="input-field col s2"></div>
                            <div class="input-field col s2">
                                @Html.LabelFor(model => model.codArea, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.codArea, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.codArea, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </fieldset>
                </div>
            </div>
            <div class="row center">
                <input type="submit" value="Cadastrar" class="btn blue" />
            </div>
        </form>
    </div>
}

<script src="~/Content/js/jquery-2.1.4.min.js"></script>
<script src="~/Content/js/jquery.validate.min.js"></script>
<script src="~/Content/js/jquery.validate.unobtrusive.js"></script>
